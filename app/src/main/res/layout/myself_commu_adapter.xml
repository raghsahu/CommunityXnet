<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_community_details"
        android:layout_weight="0.5"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/ll_sample1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_sample1"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp">

                <!--<View-->
                <!--android:background="@color/gray"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/_1sdp">-->

                <!--</View>-->

                <TextView
                    android:text="rrr"
                    android:singleLine="true"
                    android:id="@+id/tv_commu_name"
                    android:textAlignment="center"
                    style="@style/textview12black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textStyle="bold" />


                <!--<TextView-->
                <!--style="@style/textview12gray"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="Book AppointMent"-->
                <!--android:textStyle="bold" />-->

            </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/iv_sample1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@drawable/cleaner" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/star"
                android:layout_alignParentRight="true"
                />



            <LinearLayout
                android:layout_below="@id/ll_sample1"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_commu_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/btn_join_bg"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>
