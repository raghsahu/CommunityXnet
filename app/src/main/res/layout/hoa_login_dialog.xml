<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardElevation="@dimen/_10sdp"
                app:contentPadding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview14Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="LOGIN HOA"
                        />


                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/user_name"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="User name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_10sdp" />


                    <EditText
                        android:id="@+id/et_userPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_forgot_pw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:gravity="end"
                        android:text="Forgot Id &amp; Password" />


                    <LinearLayout
                        android:id="@+id/ll_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/click_sign" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>