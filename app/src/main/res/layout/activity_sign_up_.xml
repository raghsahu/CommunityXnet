<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android">

    <data class = "ActivitySignupBiding"/>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F7FD"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="310dp"
                            android:background="@drawable/sign_upnew"
                            android:orientation="vertical"></LinearLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="180dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_10sdp"
                        app:contentPadding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                style="@style/textview14Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="SIGNUP" />


                            <EditText
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/et_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_edittext"
                                android:drawableLeft="@drawable/user_name"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="First name"
                                android:inputType="text"
                                android:padding="@dimen/_10sdp" />


                            <EditText
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/et_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_edittext"
                                android:drawableLeft="@drawable/user_name"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Last name"
                                android:inputType="text"
                                android:padding="@dimen/_10sdp" />

                            <EditText
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/et_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_edittext"
                                android:drawableLeft="@drawable/user_name"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Mobile number"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="@dimen/_10sdp" />

                            <EditText
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_edittext"
                                android:drawableLeft="@drawable/ic_mail"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Email Id"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/_10sdp" />


                            <EditText
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/et_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_edittext"
                                android:drawableLeft="@drawable/ic_lock"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:padding="@dimen/_10sdp" />

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select country"
                                android:layout_margin="@dimen/_5sdp"
                                />


                            <Spinner
                                android:background="@drawable/shape_edittext"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/spin_country"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                            </Spinner>

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select state"
                                android:layout_margin="@dimen/_5sdp"
                                />


                            <Spinner
                                android:background="@drawable/shape_edittext"
                                android:id="@+id/spin_state"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                            </Spinner>

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select city"
                                android:layout_margin="@dimen/_5sdp"
                                />

                            <Spinner
                                android:background="@drawable/shape_edittext"
                                android:id="@+id/spin_city"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                            </Spinner>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                >

                                <CheckBox
                                    android:id="@+id/ch_terms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_terms"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="wrap_content"
                                    android:text="I agree Terms and Conditions"/>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/click_sign" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_first"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    style="@style/textview12primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Already have an account?" />

                <TextView
                    style="@style/textview14Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Login" />


            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</layout>

