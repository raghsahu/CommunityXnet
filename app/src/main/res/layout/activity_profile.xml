<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                style="@style/textview12white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Profile" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rel_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="315dp"
                        android:background="@drawable/gradiant_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_edit"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/shape_edittext"
                            android:gravity="center"
                            android:text="Edit"
                            android:textColor="@color/white" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/man"
                            app:civ_border_color="@android:color/white"
                            app:civ_border_width="1dp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Rrrr"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Indore"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_203sdp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp"
                                    android:weightSum="1">

                                    <TextView
                                        style="@style/textview12black"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:text="Contact No"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_mobile"
                                        style="@style/textview14gray"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="1234567890" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp"
                                    android:weightSum="1">

                                    <TextView
                                        style="@style/textview12black"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:text="Location:"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_location"
                                        style="@style/textview14gray"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight=".5"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="Plainfield,  IL" />


                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="8dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="5dp"
                                app:contentPadding="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/textview14black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_10sdp"
                                            android:text="General information"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_5sdp">

                                        <TextView
                                            style="@style/textview12black"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:text="Email"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_email"
                                            style="@style/textview14gray"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:gravity="right"
                                            android:singleLine="true"
                                            android:text="test@gmail.com" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_5sdp">

                                        <TextView
                                            style="@style/textview12black"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:singleLine="true"
                                            android:text="Gender"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_gender"
                                            style="@style/textview14gray"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:gravity="right"
                                            android:singleLine="true"
                                            android:text="" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_5sdp">

                                        <TextView
                                            style="@style/textview12black"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:singleLine="true"
                                            android:text="Occupation"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_occupation"
                                            style="@style/textview14gray"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:gravity="right"
                                            android:singleLine="true"
                                            android:text="Teacher" />


                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/card12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="8dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="5dp"
                                app:contentPadding="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/textview14black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_10sdp"
                                            android:text="Community "
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:background="#E7E5E5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_5sdp">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            style="@style/textview12black"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:text="Joined community"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:id="@+id/tv_joined_commu"
                                            style="@style/textview14Primary"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:gravity="right"
                                            android:singleLine="true"
                                            android:text="See details" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:background="#E7E5E5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_5sdp">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            style="@style/textview12black"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:singleLine="true"
                                            android:text="Self community"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:id="@+id/tv_self_commu"
                                            style="@style/textview14Primary"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight=".5"
                                            android:gravity="right"
                                            android:singleLine="true"
                                            android:text="See details" />


                                    </LinearLayout>




                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>


        </ScrollView>
    </LinearLayout>


