<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_main"
            android:layout_margin="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_request_details"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_maint"
                    android:src="@drawable/artisan2"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:text="Broko neel"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="22/10/2018"
                        android:textColor="@color/gray"
                        />


                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="Need painter for home urgent"
                        android:textColor="@color/gray"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_del_part"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                >

                    <RelativeLayout
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/rl_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/tv_change_status"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:text="Change status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView
                            android:id="@+id/tv_close_job"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:text="close job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <ImageView
                            android:layout_toLeftOf="@id/iv_delete"
                            android:id="@+id/iv_chat"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="15dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:srcCompat="@drawable/comm"
                            android:background="@drawable/dot" />



                        <ImageView
                            android:layout_alignParentRight="true"
                            android:id="@+id/iv_delete"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="15dp"
                            app:srcCompat="@drawable/delete"
                            android:background="@drawable/dot" />
                    </RelativeLayout>


            </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>